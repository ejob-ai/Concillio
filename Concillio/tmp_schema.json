{
  "pack_slug": "concillio-core",
  "locale": "en-US",
  "version": "v2-schema",
  "json_schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "roles": {
      "SUMMARIZER": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "decision",
          "consensus_bullets",
          "rationale_bullets",
          "kpis_monitor",
          "review_horizon_days",
          "confidence"
        ],
        "properties": {
          "decision": { "type": "string", "minLength": 1 },
          "summary": { "type": "string" },
          "consensus_bullets": {
            "type": "array",
            "minItems": 3,
            "maxItems": 10,
            "items": { "type": "string", "maxLength": 200 }
          },
          "rationale_bullets": {
            "type": "array",
            "minItems": 3,
            "maxItems": 10,
            "items": { "type": "string", "maxLength": 220 }
          },
          "disagreements": { "type": "array", "items": { "type": "string", "maxLength": 220 } },
          "top_risks": { "type": "array", "items": { "type": "string", "maxLength": 200 } },
          "conditions": { "type": "array", "items": { "type": "string", "maxLength": 220 } },
          "kpis_monitor": {
            "type": "array",
            "minItems": 2,
            "maxItems": 12,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["metric", "target", "cadence"],
              "properties": {
                "metric": { "type": "string", "minLength": 1 },
                "target": { "type": "string", "minLength": 1 },
                "cadence": { "type": "string", "enum": ["weekly", "monthly", "quarterly"] }
              }
            }
          },
          "review_horizon_days": { "type": "integer", "minimum": 7, "maximum": 365 },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "source_map": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "STRATEGIST": { "type": "array", "items": { "type": "string" } },
              "FUTURIST": { "type": "array", "items": { "type": "string" } },
              "PSYCHOLOGIST": { "type": "array", "items": { "type": "string" } },
              "ADVISOR": { "type": "array", "items": { "type": "string" } }
            }
          }
        }
      }
    }
  }
}
