{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "build:css": "postcss src/styles/tailwind.css -o public/static/tailwind.css --env production",
    "dev": "npm run build:css && vite",
    "build": "npm run build:css && vite build",
    "preview": "npm run build:css && wrangler pages dev",
    "preview:vite": "vite preview",
    "test": "npm run build:css && npm run build && vitest run",
    "test:unit": "vitest run",
    "test:policy": "vitest run --reporter=dot -t 'Policy: no Tailwind CDN'"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "hono": "^4.9.5",
    "scrypt-js": "^3.0.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@types/node": "^24.3.1",
    "autoprefixer": "^10.4.21",
    "json5": "^2.2.3",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.17",
    "vite": "^6.3.5",
    "vitest": "^2.1.9",
    "wrangler": "^4.4.0"
  }
}
